{% extends "layouts/base.njk" %}

{% block main %}
<h1>{{ title }}</h1>
<ul class="posts">
  {% for post in collections.posts | reverse %}
  <li>
    <h2>
      <a href="{{ post.url }}">{{ post.data.title }}</a>
    </h2>
    <p>
      <time datetime="{{ post.date | isoDate }}">
        {{- post.date | humanReadableDate -}}
      </time>
    </p>
  </li>
  {% endfor %}
</ul>
{% endblock %}
