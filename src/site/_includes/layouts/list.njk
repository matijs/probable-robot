{% extends "layouts/base.njk" %}

{% block main %}
<h1>{{ title }}</h1>
<ol class="toc">
  {% for post in collections.posts | reverse %}
  <li>
    <h2>
      <a href="{{ post.url }}">{{ post.data.title }}</a>
    </h2>
    <time datetime="{{ post.date | toISODate }}">
      {{- post.date | humanReadableDate -}}
    </time>
    <p>
      {{- post.data.description -}}
    </p>
  </li>
  {% endfor %}
</ol>
{% endblock %}
